<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %-5p %C:%L [%t] - %m%n"/>
    </Console>
    <File name="AnalysisLogs"
      fileName="analysis-${date:yyyy-MM-dd-HHmmss}.log">
      <MarkerFilter marker="ANALYSIS_LOGS" onMatch="ACCEPT" onMismatch="DENY"/>
      <PatternLayout pattern="%m%n" />
    </File>
    <File name="ErrorLogs"
      fileName="error-${date:yyyy-MM-dd-HHmmss}.log">
      <MarkerFilter marker="ERROR_LOGS" onMatch="ACCEPT" onMismatch="DENY"/>
      <PatternLayout pattern="%m%n" />
    </File>
  </Appenders>
  <Loggers>
    <Root level="INFO">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="AnalysisLogs"/>
      <AppenderRef ref="ErrorLogs"/>
    </Root>
  </Loggers>
</Configuration>