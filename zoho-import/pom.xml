	<groupId>eu.europeana.metis</groupId>
	<artifactId>zoho-import</artifactId>
	<version>0.1</version>
	<repositories>
		<repository>
			<id>libs-release-local</id>
			<name>europeana-releases</name>
			<url>http://artifactory.eanadev.org/artifactory/libs-release-local/</url>
		</repository>
	</repositories>

	<dependencies>
